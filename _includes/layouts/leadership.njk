<section class="section leader-page">
  <div class="container">
    <p class="back-link has-text-centered-mobile"><a href="/leaders/">‚Üê Back to Our Team</a></p>

    <div class="columns is-multiline">

      <div class="column is-one-third-desktop is-half-tablet has-text-centered">
        {% if photo %}
        <figure>
          <img class="leader-photo" src="{{ photo }}" alt="{{ name }}">
        </figure>
        {% endif %}
      </div>

      <div class="column is-two-thirds-desktop is-half-tablet">
        <h1 class="title is-4">{{ name }}</h1>
        {% if pronouns %}
        <h2 class="subtitle is-6">{{ pronouns }}</h2>
        {% endif %}
        {% if role %}
        <h3 class="subtitle is-6">{{ role }}</h3>
        {% endif %}

        <div class="content leader-info mt-4">
          {{ content | safe }}
        </div>

        <div class="mt-5">
          <figure>
            <img class="second-image" src="/path/to/your/second/image.jpg" alt="Second Image">
          </figure>
        </div>
      </div>

    </div>
  </div>
</section>
